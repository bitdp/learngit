<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dongpeng.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TabLayout+ViwePager"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_rx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RxJava"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_fresco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fresco加载图片"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_immergestate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="浸入式状态栏"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_bottomdialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BottomSheetDialog"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AppBar+TabLayout+ViewPager"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="属性动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_databinding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EventBus"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_js"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android+JS交互"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_mvp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="简单mvp模式"
            android:textAllCaps="false" />
        <com.example.dongpeng.myapplication.customview.TemperatureView
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>
</ScrollView>
